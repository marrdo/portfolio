---
let formData = {
  name: '',
  email: '',
  subject: '',
  message: ''
}

const handleSubmit = (e) => {
  e.preventDefault()
  alert("Message sent! (This is a demo)")
  formData = { name: '', email: '', subject: '', message: '' }
}
---

<section id="contact" class="py-20 relative">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(255,97,0,0.1),transparent_70%)]"></div>
  <div class="container relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-2">Get In Touch</h2>
      <div class="w-20 h-1 bg-orange-500 mx-auto mb-6"></div>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Have a project in mind or want to discuss potential opportunities? Feel free to reach out!
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <div class="lg:col-span-2">
        <div class="bg-black/50 border border-orange-500/20 rounded-xl">
          <div class="p-6">
            <form on:submit={handleSubmit}>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                <div>
                  <label for="name" class="block text-sm mb-2">Name</label>
                  <input id="name" name="name" type="text" value={formData.name} required
                    placeholder="Your Name"
                    class="w-full bg-black/50 border border-orange-500/20 focus:border-orange-500 p-2 rounded text-white" />
                </div>
                <div>
                  <label for="email" class="block text-sm mb-2">Email</label>
                  <input id="email" name="email" type="email" value={formData.email} required
                    placeholder="your.email@example.com"
                    class="w-full bg-black/50 border border-orange-500/20 focus:border-orange-500 p-2 rounded text-white" />
                </div>
              </div>

              <div class="mb-4">
                <label for="subject" class="block text-sm mb-2">Subject</label>
                <input id="subject" name="subject" type="text" value={formData.subject} required
                  placeholder="Subject"
                  class="w-full bg-black/50 border border-orange-500/20 focus:border-orange-500 p-2 rounded text-white" />
              </div>

              <div class="mb-6">
                <label for="message" class="block text-sm mb-2">Message</label>
                <textarea id="message" name="message" value={formData.message} required
                  placeholder="Your message here..."
                  class="w-full bg-black/50 border border-orange-500/20 focus:border-orange-500 p-2 rounded text-white min-h-[150px]"></textarea>
              </div>

              <button type="submit"
                class="bg-orange-500 hover:bg-orange-600 text-black font-medium py-2 px-4 rounded inline-flex items-center">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"
                  stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M22 2 11 13" />
                  <path d="m22 2-7 20-4-9-9-4Z" />
                </svg>
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>

      <div>
        <div class="bg-black/50 border border-orange-500/20 rounded-xl h-full">
          <div class="p-6 flex flex-col justify-between h-full">
            <div>
              <h3 class="text-xl font-bold mb-6">Contact Information</h3>
              <div class="space-y-6">
                <div class="flex items-start gap-4">
                  <div class="bg-orange-500/10 p-3 rounded-full">
                    <svg class="h-5 w-5 text-orange-500" fill="none" stroke="currentColor" stroke-width="2"
                      stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                      <path d="M4 4h16v16H4z" />
                      <path d="M22 4 12 14.01 2 4" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-gray-400">Email</h4>
                    <a href="mailto:your.email@example.com"
                      class="hover:text-orange-500 transition-colors">your.email@example.com</a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="bg-orange-500/10 p-3 rounded-full">
                    <svg class="h-5 w-5 text-orange-500" fill="none" stroke="currentColor" stroke-width="2"
                      stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.87 19.87 0 0 1-8.63-3.14A19.5 19.5 0 0 1 3.22 8.6 2 2 0 0 1 5 6.42h3A2 2 0 0 1 10 7.92a12.29 12.29 0 0 0 .67 2.79 2 2 0 0 1-.45 2.11l-1.27 1.27a16 16 0 0 0 6.29 6.29l1.27-1.27a2 2 0 0 1 2.11-.45 12.29 12.29 0 0 0 2.79.67 2 2 0 0 1 1.42 2.08z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-gray-400">Phone</h4>
                    <a href="tel:+1234567890" class="hover:text-orange-500 transition-colors">
                      +1 (234) 567-890
                    </a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="bg-orange-500/10 p-3 rounded-full">
                    <svg class="h-5 w-5 text-orange-500" fill="none" stroke="currentColor" stroke-width="2"
                      stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                      <path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z" />
                      <circle cx="12" cy="10" r="3" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-gray-400">Location</h4>
                    <p>San Francisco, CA</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-8">
              <h4 class="text-sm font-medium text-gray-400 mb-3">Follow Me</h4>
              <div class="flex gap-3">
                <!-- GitHub -->
                <a href="#" class="bg-orange-500/10 p-3 rounded-full hover:bg-orange-500 hover:text-black transition-colors">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" clip-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z">
                    </path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>