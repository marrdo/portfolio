---
import { Image } from 'astro:assets';
import MainLayout from '../layouts/MainLayout.astro';
import profileImage from '../assets/images/profile.webp';

// Placeholder for featured projects
const featuredProjects = [
  {
    title: 'Cybersecurity Dashboard',
    description: 'A real-time dashboard for monitoring network security threats and vulnerabilities.',
    tags: ['Astro', 'TypeScript', 'D3.js', 'API'],
    link: '/projects/cybersecurity-dashboard',
  },
  {
    title: 'Neural Network Visualizer',
    description: 'Interactive visualization of neural networks with customizable parameters and real-time training.',
    tags: ['WebGL', 'TensorFlow.js', 'React', 'Python'],
    link: '/projects/neural-network-visualizer',
  },
];

// Placeholder for latest blog posts
const latestPosts = [
  {
    title: 'Building Secure Web Applications',
    excerpt: 'Learn the best practices for creating secure web applications and protecting user data.',
    date: 'April 15, 2023',
    slug: 'building-secure-web-applications',
  },
  {
    title: 'The Future of AI in Cybersecurity',
    excerpt: 'Exploring how artificial intelligence is transforming the landscape of cybersecurity.',
    date: 'March 22, 2023',
    slug: 'future-of-ai-in-cybersecurity',
  },
];
---

<MainLayout 
  title="DevHacker | Full-Stack Developer & Security Specialist"
  description="Portfolio of a full-stack developer specializing in cybersecurity, web development, and AI."
>
  <!-- Hero Section -->
  <section class="py-12 md:py-20">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div class="order-2 md:order-1">
        <div class="space-y-4">
          <div class="inline-block px-3 py-1 rounded-full bg-primary/10 text-primary font-mono text-sm">
            <span class="animate-pulse">▶</span> Full-Stack Developer
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            Hi, I'm <span class="text-primary">John Doe</span>
            <span class="block">I build secure digital experiences</span>
          </h1>
          
          <p class="text-lg text-gray-300 max-w-lg">
            Specializing in cybersecurity, web development, and AI. Creating robust, 
            secure, and innovative solutions for the modern web.
          </p>
          
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href="/projects" 
              class="px-6 py-3 bg-primary text-black font-medium rounded-md hover:bg-primary/90 transition-colors"
            >
              View Projects
            </a>
            <a 
              href="/blog" 
              class="px-6 py-3 bg-transparent border border-gray-700 text-white font-medium rounded-md hover:border-primary hover:text-primary transition-colors"
            >
              Read Blog
            </a>
          </div>
        </div>
      </div>
      
      <div class="order-1 md:order-2 flex justify-center md:justify-end">
        <div class="relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-darkAccent rounded-full blur opacity-75 animate-pulse"></div>
          <div class="relative bg-dark-background rounded-full p-1">
            <Image 
              src={profileImage || "/placeholder.svg"} 
              alt="Profile picture" 
              width={300}
              height={300}
              class="rounded-full"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects Section -->
  <section class="py-12">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold">
        <span class="text-primary">#</span> Featured Projects
      </h2>
      <a href="/projects" class="text-primary hover:text-darkAccent transition-colors">
        View All →
      </a>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {featuredProjects.map(project => (
        <article class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-primary/10 transition-all duration-300">
          <div class="p-5">
            <h3 class="text-xl font-bold mb-2 text-white">
              <a href={project.link} class="hover:text-primary transition-colors">
                {project.title}
              </a>
            </h3>
            
            <p class="text-gray-300 mb-4">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="px-2 py-1 text-xs font-mono rounded bg-gray-800 text-primary">
                  {tag}
                </span>
              ))}
            </div>
            
            <a href={project.link} class="text-primary hover:text-darkAccent font-medium transition-colors">
              View Project →
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
  
  <!-- Latest Blog Posts Section -->
  <section class="py-12">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold">
        <span class="text-primary">#</span> Latest Articles
      </h2>
      <a href="/blog" class="text-primary hover:text-darkAccent transition-colors">
        View All →
      </a>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {latestPosts.map(post => (
        <article class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-primary/10 transition-all duration-300">
          <div class="p-5">
            <div class="text-sm text-gray-400 mb-2 font-mono">{post.date}</div>
            <h3 class="text-xl font-bold mb-2 text-white">
              <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                {post.title}
              </a>
            </h3>
            
            <p class="text-gray-300 mb-4">
              {post.excerpt}
            </p>
            
            <a href={`/blog/${post.slug}`} class="text-primary hover:text-darkAccent font-medium transition-colors">
              Read More →
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="py-12">
    <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-6 md:p-8">
      <div class="text-center max-w-2xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          <span class="text-primary">#</span> Let's Work Together
        </h2>
        <p class="text-gray-300 mb-6">
          Have a project in mind? I'm currently available for freelance work.
        </p>
        <a 
          href="mailto:contact@devhacker.com" 
          class="px-6 py-3 bg-primary text-black font-medium rounded-md hover:bg-primary/90 transition-colors inline-block"
        >
          Get In Touch
        </a>
      </div>
    </div>
  </section>
</MainLayout>