---
import MainLayout from '../../layouts/MainLayout.astro';
import { getBlogPosts } from '../../lib/api';

let posts = [];

try {
  const data = await getBlogPosts(); // ✅ await aquí es esencial
  console.log(data);

  posts = data.map(post => ({
    // Aquí defines la transformación de cada post si es necesario
    ...post
  }));
} catch (error) {
  console.error('Error haciendo fetch a los Posts: ' + error);
}
---


<MainLayout 
  title="Blog | Manuel Maldonado Portfolio"
  description="Artículos sobre desarrollo web, tecnologías desarrollos webs, guías desarrollos webs, consejos desarrollos webs."
>
  <section class="py-8">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">
        <span class="text-primary">&lt;</span> Blog <span class="text-primary">/&gt;</span>
      </h1>
      <p class="text-xl dark:text-gray-300 text-gray-700">
        Thoughts, tutorials, and insights on web development, cybersecurity, and technology.
      </p>
    </div>
    
    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-primary/10 transition-all duration-300">
          <div class="md:flex">
            <div class="md:w-1/3">
              <a href={`/blog/${post.slug}`}>
                <img 
                  src={post.thumbnail} 
                  alt={`Imagen del post ${post.title}`} 
                  class="w-full h-full object-cover md:h-full"
                />
              </a>
            </div>
            <div class="p-6 md:w-2/3">
              <div class="flex flex-wrap gap-2 mb-3">
                <span class="px-2 py-1 text-xs font-mono rounded bg-gray-800 text-primary">
                  {post.category.name}
                </span>
              </div>
              <div class="text-sm text-gray-400 mb-2 font-mono">{post.date}</div>
              <h2 class="text-2xl font-bold mb-3 text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-300 mb-4">
                {post.description}
              </p>
              <a href={`/blog/${post.slug}`} class="text-primary hover:text-darkAccent font-medium transition-colors inline-flex items-center">
                Leer artículo
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</MainLayout>