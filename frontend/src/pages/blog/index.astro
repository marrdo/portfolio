---
import { Image } from 'astro:assets';
import MainLayout from '../../layouts/MainLayout.astro';

// Blog post data
const posts = [
  {
    title: 'Building Secure Web Applications',
    excerpt: 'Learn the best practices for creating secure web applications and protecting user data from common vulnerabilities like XSS and CSRF attacks.',
    date: 'April 15, 2023',
    slug: 'building-secure-web-applications',
    image: '/placeholder.svg?height=400&width=600',
    imageAlt: 'Secure web application diagram',
    tags: ['Security', 'Web Development', 'Best Practices'],
  },
  {
    title: 'The Future of AI in Cybersecurity',
    excerpt: 'Exploring how artificial intelligence is transforming the landscape of cybersecurity, from threat detection to automated response systems.',
    date: 'March 22, 2023',
    slug: 'future-of-ai-in-cybersecurity',
    image: '/placeholder.svg?height=400&width=600',
    imageAlt: 'AI cybersecurity concept',
    tags: ['AI', 'Cybersecurity', 'Machine Learning'],
  },
  {
    title: 'Getting Started with Astro: A Practical Guide',
    excerpt: 'A comprehensive guide to building fast, content-focused websites with Astro, the modern static site generator that delivers lightning-fast performance.',
    date: 'February 10, 2023',
    slug: 'getting-started-with-astro',
    image: '/placeholder.svg?height=400&width=600',
    imageAlt: 'Astro logo and code',
    tags: ['Astro', 'Web Development', 'Performance'],
  },
  {
    title: 'Implementing Zero Trust Security Model',
    excerpt: 'An in-depth look at the Zero Trust security model and how to implement it in your organization to improve your security posture.',
    date: 'January 5, 2023',
    slug: 'implementing-zero-trust-security',
    image: '/placeholder.svg?height=400&width=600',
    imageAlt: 'Zero Trust security diagram',
    tags: ['Security', 'Zero Trust', 'Enterprise'],
  },
];
---

<MainLayout 
  title="Blog | DevHacker Portfolio"
  description="Articles on web development, cybersecurity, and technology trends."
>
  <section class="py-8">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">
        <span class="text-primary">&lt;</span> Blog <span class="text-primary">/&gt;</span>
      </h1>
      <p class="text-xl text-gray-300">
        Thoughts, tutorials, and insights on web development, cybersecurity, and technology.
      </p>
    </div>
    
    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-primary/10 transition-all duration-300">
          <div class="md:flex">
            <div class="md:w-1/3">
              <a href={`/blog/${post.slug}`}>
                <img 
                  src={post.image || "/placeholder.svg"} 
                  alt={post.imageAlt} 
                  class="w-full h-full object-cover md:h-full"
                />
              </a>
            </div>
            <div class="p-6 md:w-2/3">
              <div class="flex flex-wrap gap-2 mb-3">
                {post.tags.map(tag => (
                  <span class="px-2 py-1 text-xs font-mono rounded bg-gray-800 text-primary">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="text-sm text-gray-400 mb-2 font-mono">{post.date}</div>
              <h2 class="text-2xl font-bold mb-3 text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-300 mb-4">
                {post.excerpt}
              </p>
              <a href={`/blog/${post.slug}`} class="text-primary hover:text-darkAccent font-medium transition-colors inline-flex items-center">
                Read Article
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</MainLayout>