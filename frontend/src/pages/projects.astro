---
import { Image } from 'astro:assets';
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Import images
import project1Image from '../assets/images/profile.webp';
import project2Image from '../assets/images/profile.webp';
import project3Image from '../assets/images/profile.webp';
import project4Image from '../assets/images/profile.webp';

// Project data
const projects = [
  {
    title: 'Cybersecurity Dashboard',
    description: 'A real-time dashboard for monitoring network security threats and vulnerabilities with interactive visualizations and alert systems.',
    tags: ['Astro', 'TypeScript', 'D3.js', 'API'],
    image: project1Image,
    imageAlt: 'Cybersecurity Dashboard screenshot',
    link: '/projects/cybersecurity-dashboard',
    github: 'https://github.com/yourusername/cybersecurity-dashboard',
  },
  {
    title: 'Neural Network Visualizer',
    description: 'Interactive visualization of neural networks with customizable parameters and real-time training. Helps understand how AI models learn patterns.',
    tags: ['WebGL', 'TensorFlow.js', 'React', 'Python'],
    image: project2Image,
    imageAlt: 'Neural Network Visualizer screenshot',
    link: '/projects/neural-network-visualizer',
    github: 'https://github.com/yourusername/neural-network-visualizer',
  },
  {
    title: 'Encrypted Messenger',
    description: 'End-to-end encrypted messaging application with focus on privacy and security. Features include self-destructing messages and secure file sharing.',
    tags: ['Rust', 'WebAssembly', 'Cryptography', 'WebRTC'],
    image: project3Image,
    imageAlt: 'Encrypted Messenger screenshot',
    link: '/projects/encrypted-messenger',
    github: 'https://github.com/yourusername/encrypted-messenger',
  },
  {
    title: 'Blockchain Explorer',
    description: 'A tool for visualizing and exploring blockchain transactions and smart contracts with detailed analytics and historical data.',
    tags: ['Ethereum', 'Web3.js', 'GraphQL', 'Next.js'],
    image: project4Image,
    imageAlt: 'Blockchain Explorer screenshot',
    link: '/projects/blockchain-explorer',
    github: 'https://github.com/yourusername/blockchain-explorer',
  },
];
---

<MainLayout 
  title="Projects | DevHacker Portfolio"
  description="Explore my portfolio of web development, cybersecurity, and AI projects."
>
  <section class="py-8">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">
        <span class="text-primary">&lt;</span> Projects <span class="text-primary">/&gt;</span>
      </h1>
      <p class="text-xl text-gray-300">
        A collection of my work in web development, cybersecurity, and artificial intelligence.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map(project => (
        <ProjectCard 
          title={project.title}
          description={project.description}
          tags={project.tags}
          image={project.image}
          imageAlt={project.imageAlt}
          link={project.link}
          github={project.github}
        />
      ))}
    </div>
  </section>
</MainLayout>