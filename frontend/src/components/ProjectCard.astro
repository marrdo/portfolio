---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  image: ImageMetadata;
  imageAlt: string;
  link: string;
  github?: string;
}

const { title, description, tags, image, imageAlt, link, github } = Astro.props;
---

<article class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 transform hover:-translate-y-1">
  <div class="relative">
    <Image 
      src={image || "/assets/images/logo.svg"} 
      alt={imageAlt} 
      class="w-full h-48 object-cover" 
      width={600}
      height={300}
    />
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent opacity-70"></div>
  </div>
  
  <div class="p-5">
    <h3 class="text-xl font-bold mb-2 text-white">
      <a href={link} class="hover:text-primary transition-colors">
        {title}
      </a>
    </h3>
    
    <p class="text-gray-300 mb-4 line-clamp-3">
      {description}
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="px-2 py-1 text-xs font-mono rounded bg-gray-800 text-primary">
          {tag}
        </span>
      ))}
    </div>
    
    <div class="flex justify-between items-center">
      <a href={link} class="text-primary hover:text-darkAccent font-medium transition-colors">
        View Project â†’
      </a>
      
      {github && (
        <a href={github} class="text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">GitHub</span>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>