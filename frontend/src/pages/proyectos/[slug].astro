---
import MainLayout from "../../layouts/MainLayout.astro";
import { getProjectBySlug, getProyectos } from "../../lib/api";
import Button from "../../components/ui/Button.astro";

export async function getStaticPaths() {
  const proyectos = await getProyectos();
  return proyectos.map((proyecto) => ({
    params: { slug: proyecto.slug },
  }));
}

const { slug } = Astro.params;
let proyecto = null;
try {
  proyecto = await getProjectBySlug(slug);
} catch (error) {
  console.error("Error fetching project:", error);
}
const allProyectos = await getProyectos();

// Filtramos los relacionados por empresa (excluyendo el actual)
const proyectosRelacionados = allProyectos.filter((p) => {
  if (p.slug === proyecto.slug) return false;

  const empresasActual = proyecto.empresas.map(e => e.id);
  const empresasOtro = p.empresas?.map(e => e.id) || [];

  // Ver si comparten al menos una empresa
  return empresasOtro.some(id => empresasActual.includes(id));
});
const mockStatus = "Completado";
---
<MainLayout
title="Fullstack Developer | Desarrollador Fullstack | Desarrollador Backend Sevilla | Desarrollador Web Sevilla | Paginas Web Sevilla. Proyecto individual."
description=`Portfolio de Manuel Maldonado desarrollador web fullstack. Proyecto ${proyecto.nombre}`
image={proyecto.thumbnail}
>
  {proyecto ? (
    <article id="proyecto-individual" class="min-h-screen bg-lightShades dark:bg-dark-background transition-colors duration-300">
      <!-- HERO -->
      <div class="relative overflow-hidden bg-gradient-to-br from-primary/10 via-lightAccent/5 to-transparent dark:from-primary/20 dark:via-lightAccent/10 dark:to-transparent">
        <div class="absolute inset-0 opacity-30"></div>

        <div class="relative max-w-4xl mx-auto px-6 py-16 lg:py-24">
          <!-- Breadcrumb -->
          <nav class="mb-8 text-sm" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2">
              <li><a href="/" class="text-light-text/70 dark:text-dark-text/70 hover:text-primary">Home</a></li>
              <li>/</li>
              <li><a href="/proyectos" class="text-light-text/70 dark:text-dark-text/70 hover:text-primary">Proyectos</a></li>
              <li>/</li>
              <li class="text-light-text dark:text-dark-text font-medium">{proyecto.nombre}</li>
            </ol>
          </nav>

          <!-- Header -->
          <div class="space-y-6">
            <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-light-text dark:text-dark-text leading-tight">
              {proyecto.nombre}
            </h1>

            <p class="text-lg lg:text-xl text-light-text/80 dark:text-dark-text/80 max-w-3xl  leading-relaxed ">
              {proyecto.introduccion}
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <Button a={proyecto.url_proyecto} class="inline-flex items-center px-6 py-3 bg-primary hover:bg-primary/90 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-105 hover:shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Ver proyecto
              </Button>
            </div>
          </div>
        </div>
      </div>

      <!-- CONTENIDO PRINCIPAL -->
      <div class="max-w-6xl mx-auto px-6 py-16 grid lg:grid-cols-3 gap-12">
        <!-- Columna Principal -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Logo del proyecto -->
          <section>
            <h2 class="text-2xl font-bold text-light-text dark:text-dark-text mb-6">Logo del proyecto</h2>
            <div class="relative group overflow-hidden rounded-xl bg-light-background dark:bg-dark-codeBackground border border-light-text/10 dark:border-dark-text/10">
              <figure class="logo-proyecto">
                <picture>
                  <source srcset={proyecto.tiny} media="(max-width: 640px)" />
                  <source srcset={proyecto.thumbnail} media="(min-width: 640px)" />
                  <img
                    src={proyecto.thumbnail}
                    alt={`Logo del proyecto ${proyecto.nombre}`}
                    class="transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                </picture>
              </figure>
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </section>

          <!-- Descripción -->
          <section>
            <h2 class="section-title">Mi colaboración en el proyecto</h2>
            <div class="prose prose-lg prose-gray dark:prose-invert max-w-none">
            <p class="text-light-text/80 dark:text-dark-text/80 leading-relaxed">
              {proyecto.descripcion}
            </p>
          </div>
          </section>
        </div>

        <!-- SIDEBAR -->
        <aside class="lg:col-span-1 space-y-8 ">
          <div class=" sticky top-16 p-6 rounded-xl bg-light-background dark:bg-dark-codeBackground border border-light-text/10 dark:border-dark-text/10">
            <h3 class="text-lg font-semibold text-light-text dark:text-dark-text mb-4">
              Tecnologías usadas
            </h3>
            <div class="flex flex-wrap gap-2">
              {proyecto.habilidades.map((habilidad) => (
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20">
                  {habilidad.nombre}
                </span>
              ))}
            </div>
          </div>
        </aside>
      </div>

      <!-- PROYECTOS RELACIONADOS -->
      <section class="bg-light-background dark:bg-dark-codeBackground border-t border-light-text/10 dark:border-dark-text/10">
        <div class="max-w-4xl mx-auto px-6 py-16">
          <h2 class="text-2xl font-bold text-light-text dark:text-dark-text mb-8 text-center">
            Más proyectos
          </h2>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {proyectosRelacionados.slice(0, 3).map((relacionado) => (
            <a href={`/proyectos/${relacionado.slug}`} class="group block p-6 rounded-xl bg-lightShades dark:bg-dark-background border border-light-text/10 dark:border-dark-text/10 hover:border-primary/30 hover:shadow-lg transition-all duration-200">
              <div class="aspect-video bg-gradient-to-br from-primary/20 to-lightAccent/20 rounded-lg mb-4 flex items-center justify-center">
                {relacionado.tiny ? (
                  <img src={relacionado.tiny} alt={relacionado.nombre} class="img-proyecto object-cover rounded-lg" />
                ) : (
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5..." />
                  </svg>
                )}
              </div>
              <h3 class="font-semibold text-light-text dark:text-dark-text group-hover:text-primary">
                {relacionado.nombre}
              </h3>
              <p class="text-sm text-light-text/70 dark:text-dark-text/70 mt-1">
                {relacionado.introduccion || 'Sin descripción disponible.'}
              </p>
            </a>
          ))}
          </div>
        </div>
      </section>
    </article>
  ) : (
    <div class="min-h-screen flex items-center justify-center bg-lightShades dark:bg-dark-background">
      <div class="text-center space-y-4">
        <div class="w-16 h-16 mx-auto bg-red-100 dark:bg-red-900/20 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-light-text dark:text-dark-text">Proyecto no encontrado</h1>
        <p class="text-light-text/70 dark:text-dark-text/70">El proyecto que buscas no ha podido ser cargado.</p>
        <a href="/projects" class="inline-flex items-center px-4 py-2 bg-primary hover:bg-primary/90 text-white font-medium rounded-lg transition-colors">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver a los proyectos
        </a>
      </div>
    </div>
  )}
</MainLayout>
