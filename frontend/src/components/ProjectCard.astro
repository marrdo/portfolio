---
import Badge from '../components/ui/Badge.astro';
import Button from '../components/ui/Button.astro';

interface Props {
  titulo: string;
  slug : string;
  descripcion: string;
  habilidades: string[];
  thumbnail: string;
  tiny?: string;
  imageAlt: string;
  link: string;
  github?: string;
}

const { titulo, descripcion, slug, habilidades, thumbnail, tiny, imageAlt, link, github } = Astro.props;
console.log('imagen de Desktop', thumbnail);
console.log('Imagen de mobile', tiny);
---

  <article
  onclick={`location.href='/proyectos/${slug}'`} 
  class="border border-primary/50 overflow-hidden group rounded-xl card-proyecto ">
    <div class="relative overflow-hidden flex items-center justify-center bg-gray-600">
      <figure  class="transition-transform duration-500 group-hover:scale-110 img-proyecto" >
        <picture>
          <source srcset={tiny} media="(max-width: 640px)" />
          <source srcset={thumbnail} media="(min-width: 640px)" />
          <img src={thumbnail} alt={titulo} class="" />
        </picture>
      </figure>
      <div class="absolute inset-0 bg-gradient-to-t from-transparent to-primary opacity-10"></div>
    </div>
    <div class="bg-gray-600 p-4">
      <h4 class="flex items-center gap-2 text-lg font-semibold mb-2 text-lightShades">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <polyline points="4 17 10 11 4 5" />
              <line x1="12" y1="19" x2="20" y2="19" />
          </svg>
        {titulo}
      </h4>
      {/* <p class="text-gray-400 mb-4">{description}</p> */}
      <div class="flex flex-wrap gap-2 mb-4">
        {habilidades.map(habilidad => <Badge variant="accent">{habilidad}</Badge>)}
      </div>
      <div class="flex gap-3">
        <Button variant="default" size="sm" href={link} target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
          </svg>
          Ver Proyecto
        </Button>
      </div>
    </div>
  </article>